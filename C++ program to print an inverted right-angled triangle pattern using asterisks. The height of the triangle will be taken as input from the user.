#include <iostream>

int main() {
    int height;

    // Input height of the inverted triangle
    std::cout << "Enter the height of the inverted triangle: ";
    std::cin >> height;

    // Loop to print the inverted triangle pattern
    for (int i = height; i >= 1; --i) {
        // Print asterisks in each row
        for (int j = 1; j <= i; ++j) {
            std::cout << "* ";
        }

        // Move to the next line after each row
        std::cout << std::endl;
    }

    return 0;
}
