#include <iostream>

// This program prints a pattern of a right-angled triangle with numbers.
// The size of the triangle (number of rows) is taken as input from the user.

int main() {
    int size;

    // Input size of the triangle
    std::cout << "Enter the number of rows for the triangle: ";
    std::cin >> size;

    // Loop to print the right-angled triangle pattern with numbers
    for (int i = 1; i <= size; ++i) {
        for (int j = 1; j <= i; ++j) {
            std::cout << j << " ";
        }
        // Move to the next line after each row
        std::cout << std::endl;
    }

    return 0;
}
