#include <iostream>

// This program prints a pattern of a right-angled triangle using numbers.
// The number of rows for the triangle is taken as input from the user.

int main() {
    int rows;

    // Input number of rows for the right-angled triangle
    std::cout << "Enter the number of rows for the triangle: ";
    std::cin >> rows;

    // Loop to print the right-angled triangle
    for (int i = 1; i <= rows; ++i) {
        for (int j = 1; j <= i; ++j) {
            std::cout << j << " ";
        }
        std::cout << std::endl;
    }

    return 0;
}
