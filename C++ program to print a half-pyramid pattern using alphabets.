#include <iostream>

int main() {
    int height;
    char currentChar = 'A';

    // Input height of the half-pyramid
    std::cout << "Enter the height of the half-pyramid: ";
    std::cin >> height;

    // Loop to print the half-pyramid pattern
    for (int i = 1; i <= height; ++i) {
        // Print alphabet characters in each row
        for (int j = 1; j <= i; ++j) {
            std::cout << currentChar << " ";
            ++currentChar;
        }

        // Move to the next line after each row
        std::cout << std::endl;
    }

    return 0;
}
