#include <iostream>

int main() {
    int n;
    int sum = 0;

    std::cout << "Enter a positive integer: ";
    std::cin >> n;

    if (n <= 0) {
        std::cout << "Please enter a positive integer." << std::endl;
    } else {
        for (int i = 2; i <= n; i += 2) {
            sum += i;
        }

        std::cout << "The sum of even numbers from 2 to " << n << " is: " << sum << std::endl;
    }

    return 0;
}
