#include<iostream>

using namespace std;

int num;

int main(){
    cout<<"Enter the number"<<endl;
    cin>>num;

    if(num < 0){
        cout<<"Factorial is not defined for negative numbers"<<endl;
    }
    else{
        int factorial = 1;

        if (num == 0) {
            cout << "Factorial for 0 is 1" << endl;
        }
        else {
            for (int i = 1; i <= num; i++) {
                factorial *= i;
            }
            cout << "Factorial for " << num << " is " << factorial << endl;
        }
    }
}
