
#include <iostream>

// This program prints a pattern of a checkerboard using asterisks and spaces.
// The size of the checkerboard (number of rows and columns) is taken as input from the user.

int main() {
    int size;

    // Input size of the checkerboard
    std::cout << "Enter the size of the checkerboard: ";
    std::cin >> size;

    // Loop to print the checkerboard pattern
    for (int i = 1; i <= size; ++i) {
        for (int j = 1; j <= size; ++j) {
            // Print asterisks and spaces in alternating positions
            if ((i + j) % 2 == 0) {
                std::cout << "*";
            } else {
                std::cout << " ";
            }
        }
        std::cout << std::endl;
    }

    return 0;
}
.
