#include <iostream>

int main() {
    int size;

    // Input size of the triangle
    std::cout << "Enter the size of the triangle: ";
    std::cin >> size;

    // Loop to print the triangle pattern
    for (int i = 1; i <= size; ++i) {
        // Print asterisks in each row
        for (int j = 1; j <= i; ++j) {
            std::cout << "* ";
        }
        // Move to the next line after each row
        std::cout << std::endl;
    }

    return 0;
}
