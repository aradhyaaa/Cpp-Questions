#include <iostream>

int main() {
    int height;

    // Input height of the triangle
    std::cout << "Enter the height of the triangle: ";
    std::cin >> height;

    // Loop to print the triangle pattern
    for (int i = 1; i <= height; ++i) {
        // Print numbers in each row
        for (int j = 1; j <= i; ++j) {
            std::cout << j << " ";
        }
        // Move to the next line after each row
        std::cout << std::endl;
    }

    return 0;
}
