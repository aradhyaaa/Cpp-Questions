#include <iostream>

// This program prints a pattern of a Floyd's triangle using numbers.
// The number of rows for the triangle is taken as input from the user.

int main() {
    int rows, num = 1;

    // Input number of rows for Floyd's triangle
    std::cout << "Enter the number of rows for Floyd's triangle: ";
    std::cin >> rows;

    // Loop to print Floyd's triangle
    for (int i = 1; i <= rows; ++i) {
        for (int j = 1; j <= i; ++j) {
            std::cout << num << " ";
            ++num;
        }
        std::cout << std::endl;
    }

    return 0;
}
