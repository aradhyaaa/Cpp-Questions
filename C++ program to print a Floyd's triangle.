#include <iostream>

int main() {
    int numRows;
    int number = 1;

    // Input number of rows for Floyd's triangle
    std::cout << "Enter the number of rows for Floyd's triangle: ";
    std::cin >> numRows;

    // Loop to print Floyd's triangle
    for (int i = 1; i <= numRows; ++i) {
        // Print elements in each row
        for (int j = 1; j <= i; ++j) {
            std::cout << number << " ";
            ++number;
        }

        // Move to the next line after each row
        std::cout << std::endl;
    }

    return 0;
}
